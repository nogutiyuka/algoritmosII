4. Criar um vetor que armazena o preço de 5 produtos, atualizar o preço em 10%.
#include <stdio.h>
#include <string.h>

int main () {
	float vetor[8], porcentagem[8], novo[8];
	
	for (int a = 0; a < 8; a++){
		printf("PRECO: ");
		scanf("%f", &vetor[a]);
	}
	
	for (int b = 0; b < 8; b++){
		porcentagem[b] = vetor[b] * 0.10;
	}
	
	for (int c = 0; c < 8; c++){
		novo[c] = vetor[c] + porcentagem[c];
		printf("O NOVO VALOR E: %.2f\n", novo[c]);
	}
	
	return 0;
}
